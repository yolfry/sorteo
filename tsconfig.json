{
  "compilerOptions": {
    "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/**/*.ts", "src/**/**/*.d.ts", "src/**/**/*.tsx", "src/**/**/*.vue", "src/**/**/*.json"],
  "exclude": [
    "node_modules"
  ]
}